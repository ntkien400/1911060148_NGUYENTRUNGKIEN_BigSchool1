@model _1911060148_NGUYENTRUNGKIEN_BigSchool1.ViewModels.FollowingsViewModel
@using Microsoft.AspNet.Identity;
@using _1911060148_NGUYENTRUNGKIEN_BigSchool1.Models;
@{
    ViewBag.Title = "Following";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Giảng viên theo dõi</h2>

<ul class="course">
    @foreach (var lecturers in Model.FollowingLecturers)
    {
        <li>
            <div class="details">
                <span class="lecturer">
                    @lecturers.Name
                </span>
            </div>
            <a href="#" class="js-toggle-follow" data-user-id="@lecturers.Followees">Unfollow</a>
        </li>
    }
</ul>
@section scripts
{
    <script>
        $(document).ready(function () {
            FollowsController.init();
        });
    </script>
}
